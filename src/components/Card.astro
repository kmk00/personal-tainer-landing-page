---
export interface Props {
    content : string[];
    title: string
    primary?: boolean

}
const { primary, content, title } = Astro.props;

const primaryClass = primary ? 'primary-card' : 'card card-box'

---

<div class=`${primaryClass} `>
    <div class="card-title">
        <h4 class="title">{title}</h4>
    </div>
    <div class="card-content">
        <ul>
            {content.map((item) => 
            <li>
                <img src={primary ? "/images/arrow-right.svg" : "/images/arrow-right-2.svg"} alt="check" width={30} height={30} />
                <p>{item}</p>
            </li>)}
        </ul>
    </div>
</div>


<style>

    .card,.primary-card {
        padding: 1rem;
        border-radius: 0.5rem;
        font-weight: 800;
        box-shadow: var(--box-shadow);
    }

    .card-title {
        margin-bottom: 2rem;
    }

    .primary-card {
        background-color: var(--accent-light);
        color: var(--balck);
        height: 100%;
        display: flex;
        flex-direction: column;
        justify-content: space-between; 
    }

    .card-content{
        flex-grow: 1;
        display: flex;
        flex-direction: column;
        justify-content: space-between;
    }

    .card{
        background-color: var(--secondary-light);
        color: var(--white);
    }

    .title{
        font-size: 1.5rem;
        font-family: var(--font-main);
        font-weight: 800;
    }

    .card .title{
        color: var(--accent-light);
    }

    .card-box{
        flex-basis: 400px;
        flex-grow: 1;
    }

    ul{
        list-style: none;
        display: flex;
        flex-direction: column;
        gap: 1rem;
       
    }

    li {
        font-size: 1.2rem;
        display: flex;
        gap:0.5rem;
        align-items: center;
    }

</style>