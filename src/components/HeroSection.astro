---
import Image from "astro/components/Image.astro";
import DoubleArrow from "../images/double-arrow-down.svg";
---

<section id="hero-section" class="hero-section">
  <div class="image-box"></div>
  <div class="text-box">
    <h1>OSOBISTY TRENER, KTÓRY POMOŻE CI <span>OSIĄGNĄĆ</span> WYMARZONĄ<span> FORMĘ</span></h1>
    <Image src={DoubleArrow} alt="logo" width={70} height={70} />
  </div> 
</section>

<style>
  .hero-section {
    min-height: calc(100vh - 15rem);
    /* min-height: 40rem; */
    position: relative;
  }

  .image-box {
    background-image: url("../images/hero-img.jpg");
    background-size: cover;
    background-position: center;
    height: 100%;
    width: 100%;
    filter: blur(5px) brightness(50%);
    position: absolute;
    z-index: 1;
  }

  .text-box {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 2rem;
    max-width: var(--max-width);
    margin: 0 auto;
    width: 100%;
    position: absolute;
    z-index: 1;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
  }

  .text-box h1 {
    font-family: var(--font-main);
    font-weight: bold;
    font-size: clamp(2.3rem, 5vw, 5rem);
    text-transform: uppercase;
    text-align: center;
    color: var(--white);
  }

  .text-box h1 span {
    color: var(--accent-light);
  }

</style>