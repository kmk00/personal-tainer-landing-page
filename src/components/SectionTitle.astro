---
import type { ImageMetadata } from 'astro';
import Image from 'astro/components/Image.astro';

export interface Props {
    title: string;
    image: ImageMetadata;
    textColor?: 'dark' | 'light';
}

const { title, image, textColor = 'light' } = Astro.props;

---

<section class="section-title">
    <div class="content-box">
        <Image src={image} alt="logo" width={85} height={85} /> 
        <h2 class={textColor}>{title}</h2>
    </div>
</section>

<style>

    .content-box {
        padding: 1rem 0;
        display: flex;
        flex-direction: column;
        align-items: center;
        width: fit-content;
    }

    h2{
        font-size: 2rem;
        font-family: Freshman, sans-serif;
        font-weight: normal;
    }

    .dark {
        color: var(--black);
    }

    .light {
        color: var(--white);
    }

</style>
