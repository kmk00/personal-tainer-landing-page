---
interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/public/images/favicon.png" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body>
		<slot />
	</body>
</html>
<style is:global>
	:root {
		--primary: #212121;
		--secondary: #323232;
		--secondary-light: #454545;
		--accent: #DDCA24;
		--accent-light: #F1E792;
		--white: #EFE6E6;
		--black: #070707;
		--light-accent-opacity: hsla(54, 77%, 76%, 0.199);
		--max-width: 1440px;
		--border-radius: 12px;
		--font-main: 'Aharoni', sans-serif;
		--box-shadow: 0px 0px 10px 2px var(--black);
		--box-shadow-light: 0px 0px 10px 2px var(--secondary);
	}

	@font-face{
		font-family: Freshman;
		src: url('/fonts/Freshman.ttf') format('truetype');
		font-weight: normal;
		font-style: normal;
		font-display: swap;
	}

	@font-face{
		font-family: Akshar;
		src: url('/fonts/Akshar.ttf') format('truetype');

	}

	*, *::before, *::after {
		box-sizing: border-box;
		margin: 0;
		padding: 0;
	}

	html {
		font-family:  var(--font-main);
		background: #13151a;
		scroll-behavior: smooth;
	}

	body{
		font-size: calc(1rem + 0.5vw);
	}

	button{
		cursor: pointer;
		background: none;
		text-align: left;
	}

</style>
